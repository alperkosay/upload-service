{
  "openapi": "3.0.0",
  "info": {
    "title": "API Dokümantasyonu",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/api/file": {
      "get": {
        "summary": "Resimleri Listeler",
        "responses": {
          "200": {
            "description": "Başarılı"
          }
        }
      },
      "post": {
        "summary": "Dosya yükleme",
        "parameters": [
          {
            "in": "query",
            "name": "fileFormat",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "fileName",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "file",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Başarılı"
          }
        }
      }
    }
  }
}
